---
import Hamburger from '../../public/Icons/Hamburger.astro'
---

<header>
<header class="fixed top-0 w-full bg-white/40 backdrop-blur-md shadow-sm z-50 ">
  <div class="max-w-6xl mx-auto flex items-center justify-between px-6 py-4 text-gray-800 font-medium">
    
    <a href="/" class="flex items-center">
      <img class="w-[70px]" src="/Logo.jpg" alt="">
        <span class="text-xl font-semibold tracking-wide text-emerald-700">SUTENS</span>
    </a>

    <nav class="hidden md:flex items-center space-x-8 absolute left-1/2 transform -translate-x-1/2">
        <a href="/" class="text-gray-700 hover:text-emerald-600 transition-colors duration-300 font-medium">INICIO</a>
        <a href="/Secretarias" class="text-gray-700 hover:text-emerald-600 transition-colors duration-300 font-medium">SECRETARIAS</a>
        <a href="/Nosotros" class="text-gray-700 hover:text-emerald-600 transition-colors duration-300 font-medium">NOSOTROS</a>
        <a href="/Comunicaciones" class="text-gray-700 hover:text-emerald-600 transition-colors duration-300 font-medium">COMUNICACIONES</a>
    </nav>

    <div class="flex items-center space-x-4">
        <div class="hidden md:flex items-center">
            <a href="/Afiliate" class="bg-gradient-to-r from-emerald-500 to-green-600 hover:from-emerald-600 hover:to-green-700 text-white font-medium py-2 px-6 rounded-lg shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-0.5">
                AFILIATE
            </a>
        </div>
        
        <button id="menu-btn" class="md:hidden flex flex-col space-y-1 focus:outline-none">
            <Hamburger></Hamburger>
        </button>
    </div>
</div>

  <!-- Menú Móvil -->
  <div id="menu" class="font-medium bg-white/40 z-50 flex pt-2 fixed h-[50vh] w-full text-center items-center backdrop-blur-md shadow-md transform translate-x-full transition-transform duration-300 ease-in-out flex-col">
    <a href="/" class="py-4 text-gray-800 hover:text-blue-600 transition">Inicio</a>
    <a href="/Secretarias" class="py-4 text-gray-800 hover:text-blue-600 transition">Secretarias</a>
    <a href="/Nosotros" class="py-4 text-gray-800 hover:text-blue-600 transition">Nosotros</a>
    <a href="/Comunicaciones" class="py-4 text-gray-800 hover:text-blue-600 transition">Comunicaciones</a>
    <a href="/Afiliate" class="py-4 text-gray-800 hover:text-blue-600 transition">Afiliate</a>
</div>
</header>

<script>
  const btn = document.getElementById("menu-btn");
  const menu = document.getElementById("menu");

  btn.addEventListener("click", () => {
    menu.classList.toggle("translate-x-0");
    menu.classList.toggle("translate-x-full");
  });
</script>

</header>